<% if line_item == @current_item %>
  <tr id="current_item">
<% else %>
  <tr>
<% end %>
    <td><%= button_to 'Remove', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= form_for(line_item) do |f| %>
      <div class="field" style="width: 30px;">
        <%= f.number_field  :quantity, id: "quantity-field" %>
      </div>
      <%= f.submit "Update Quantity" %>
    <% end %>
 </td>
    <td><%= line_item.product.title %></td>
    <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
  </tr>
